@model MvcKutuphaneProje.Models.Entity.TBL_UYELER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2 style="text-align:center; color:red;">KÜTÜPHANE ÜYE BİLGİ SİSTEMİ</h2>
@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{
<table style="margin-top:0px;" class="table table-bordered">

    <tr>
        <td style=" width: 150px;color:blue;">
            <label style="font-weight:bolder">ADI:</label>
        </td>
        <td>
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td style="color:blue">
            <label style="font-weight:bolder">SOYADI:</label>
        </td>
        <td>
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td style="color:blue">
            <label style="font-weight:bolder">MAİL:</label>
        </td>
        <td>
            @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control",@readonly="readonly" })
        </td>
    </tr>
    <tr>
        <td style="color:blue">
            <label style="font-weight:bolder">KULLANICI ADI:</label>
        </td>
        <td>
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td style="color:blue">
            <label style="font-weight:bolder">ŞİFRE:</label>
        </td>
        <td>
            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td style="color:blue">
            <label style="font-weight:bolder">FOTOĞRAF:</label>
        </td>
        <td>
            @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td style="color:blue">
            <label style="font-weight:bolder">OKUL:</label>
        </td>
        <td>
            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
        </td>
    </tr>
</table>
    <button class="btn btn-warning"> Bilgileri Güncelle </button>
}

