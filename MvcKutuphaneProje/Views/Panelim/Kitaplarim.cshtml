@using MvcKutuphaneProje.Models.Entity
@model List<TBL_HAREKETLER>

@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2 style="text-align:center; margin-top:15px;margin-bottom:20px; color:blue;">Kitap Geçmişim</h2>

<table class="table table-bordered">
    <tr>

        <th>Kitap Adı</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        

    </tr>
    @foreach (var x in Model)
        {
            <tr>
                
                <td>@x.TBL_KITAPLAR.AD</td>
                <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(x.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
               

            </tr>
        }
</table>