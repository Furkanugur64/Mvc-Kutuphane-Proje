@model MvcKutuphaneProje.Models.Entity.TBL_KITAPLAR
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-bottom:15px; margin-top:15px">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "Form-Control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Kategori</label>
        @Html.DropDownListFor(k => k.TBL_KATEGORILER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Yazar</label>
        @Html.DropDownListFor(k => k.TBL_YAZARLAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "Form-Control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Yayınevi</label>
        @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "Form-Control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Sayfa</label>
        @Html.TextBoxFor(k => k.SAYFA, new { @class = "Form-Control" })
    </div>
    <button class="btn btn-success" style="background-color:green; color:white" >Kaydet</button>
    <a href="/Kitap/Index/" style="background-color:red; color:white" class="btn btn-danger">İptal</a>
    <input type="hidden" name="DURUM" value="True" />
</form>


