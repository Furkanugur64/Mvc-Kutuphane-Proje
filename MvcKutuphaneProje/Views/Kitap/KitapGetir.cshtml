@model MvcKutuphaneProje.Models.Entity.TBL_KITAPLAR
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-top:15px; margin-bottom:15px">
        <label>Kitap ID</label>
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:15px; margin-bottom:15px">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px; margin-bottom:15px">
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.TBL_KATEGORILER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px; margin-bottom:15px">
        <label>Yazar</label>
        @Html.DropDownListFor(k => k.TBL_YAZARLAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px; margin-bottom:15px">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(x => x.BASIMYIL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px; margin-bottom:15px">
        <label>Yayınevi</label>
        @Html.TextBoxFor(x => x.YAYINEVI, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px; margin-bottom:15px">
        <label>Sayfa</label>
        @Html.TextBoxFor(x => x.SAYFA, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning" style="background-color:orangered; color:white" >Güncelle</button>
    <a href="/Kitap/Index/" style="background-color:red; color:white"  class="btn btn-danger">İptal</a>
}
